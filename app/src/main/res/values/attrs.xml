<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Base">
        <attr name="labelFont" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="very_bold" value="2" />
            <enum name="none" value="3" />
        </attr>

        <attr name="textType" format="enum">
            <enum name="simple" value="0" />
            <enum name="numeric" value="1" />
        </attr>

        <attr name="customStyle" format="enum">
            <enum name="simpleLeftArrow" value="0" />
            <enum name="leftArrowBorder" value="1" />
        </attr>

        <attr name="buttonStyle"></attr>
    </declare-styleable>
    <declare-styleable name="Button">
        <attr name="style" format="enum">
            <enum name="primary" value="0" />
            <enum name="accent" value="1" />
            <enum name="accentBorder" value="2" />
        </attr>
    </declare-styleable>
</resources>